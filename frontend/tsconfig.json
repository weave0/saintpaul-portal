{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "types": ["node", "react", "react-dom"]
  },
  "include": ["src/**/*.{ts,tsx,js,jsx}"],
  "exclude": ["dist", "node_modules"]
}